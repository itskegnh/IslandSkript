command /gravity:
    trigger:
        if {gravity} is set:
            delete {gravity}
            stop
        set {gravity} to true
        while {gravity} is set:
            loop all blocks in radius 10 of player:
                if loop-block is not air:
                    if block 1 meter below loop-block is air:
                        spawn "falling %loop-block%" parsed as entity type 0.5 meters below loop-block
                        set loop-block to air
            wait a tick
